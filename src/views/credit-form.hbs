<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto my-5">
      {{#unless simpleRate}}
        <div class="card">
          <div class="card-header">
            <h5 class="text-primary text-center font-weight-bold">CALCULO DE INTERES SIMPLE POR PERIODO ANUAL</h5>
          </div>
          <div class="card-body">
            <form action="/" method="POST">
              <div class="form-group">
                <label class="font-weight-bold"><i class="fas fa-fw fa-money-bill text-info"></i> MONTO DEL CREDITO</label>
                <input required type="number" class="form-control text-right" name="ammount" placeholder="Escriba monto del crédito (números)">
              </div>
              <div class="form-group">
                <label class="font-weight-bold"><i class="fas fa-fw fa-percent text-info"></i> TASA DEL CREDITO</label>
                <input required type="number" class="form-control text-right" name="rate" placeholder="Escriba la tasa del crédito (números)">
              </div>
              <div class="form-group">
                <label class="font-weight-bold"><i class="fas fa-fw fa-calendar-alt text-info"></i> AÑOS DE PLAZO</label>
                <input required type="number" class="form-control text-right" name="years" placeholder="Años de plazo (números)">
              </div>
              <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block"><i class="fas fa-fw fa-calculator"></i> Calcular el interés simple</button>
              </div>
            </form>
          </div>
        </div>
      {{/unless}}
    </div>
  </div>
  {{#if simpleRate}}
    <div class="row">
      <div class="col-md-8 mx-auto">
        <div class="card">
          <div class="card-header">
            <h5 class="text-success text-center font-weight-bold"><i class="fas fa-fw fa-check"></i> RESULTADO DEL CALCULO</h5>
          </div>
          <div class="card-body">
            El monto por el interés simple es de = {{ simpleRate }}
          </div>
          <div class="card-footer text-right">
            <a class="btn btn-primary" href="/"><i class="fas fa-fw fa-redo"></i> VOLVER A CALCULAR</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{ else }}
    
  {{/if}}
